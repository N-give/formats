{
  "extends": "spectral:oas",
  "rules": {
    "valid-default": {
      "description": "Defaults must be valid against their schema",
      "message": "{{error}}",
      "recommended": true,
      "type": "validation",
      "severity": "error",
      "given": "$.default^",
      "then": {
        "function": "schemaPath",
        "functionOptions": {
          "allErrors": true,
          "field": "default",
          "schemaPath": "$"
        }
      }
    },
    "valid-example-0": {
      "description": "Examples must be valid against their schema",
      "message": "{{error}}",
      "recommended": true,
      "type": "validation",
      "severity": "error",
      "given": "$..examples.0^^",
      "then": {
        "function": "schemaPath",
        "functionOptions": {
          "allErrors": true,
          "field": "examples.0",
          "schemaPath": "$"
        }
      }
    },
    "valid-example-1": {
      "description": "Examples must be valid against their schema",
      "message": "{{error}}",
      "recommended": true,
      "type": "validation",
      "severity": "error",
      "given": "$..examples.1^^",
      "then": {
        "function": "schemaPath",
        "functionOptions": {
          "allErrors": true,
          "field": "examples.1",
          "schemaPath": "$"
        }
      }
    }
  }
}
